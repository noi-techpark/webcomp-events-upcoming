    "image": "wcs-logo.png",
    "searchTags": [],
    "dist": {
        "basePath": "dist",
        "files": [
            "events-upcoming.min.js"
        ],
        "scripts": []
    },
    "configuration": {
        "tagName": "events-upcoming",
        "options": [
            {
                "key": "source",
                "type": "select",
                "label": "Filter by dataprovider",
                "required": false,        
                "options": {
                  "values": [
                    "null",           
                    "lts",
                    "drin",
                    "trevilab"
                  ],
                  "default":"null"
                }
              },
              {
                "key": "location",
                "type": "text",
                "label": "Location Filter (pass type + id check out https://tourism.opendatahub.com/v1/Location)",
                "required": false,
                "options": {
                  "default": ""
                }
              },
            {
                "key": "max-events",
                "type": "number",
                "label": "Max number of events to display",
                "required": false,
                "options": {
                    "default": 12
                }
            },
            {
                "key": "event-rotation-interval",
                "type": "number",
                "label": "Event rotation interval in seconds, if not all events are visible on screen. Will be ignored if max-events os set to 1",
                "required": false,
                "options": {
                    "default": 60
                }
            },
            {
                "key": "language-rotation-interval",
                "type": "number",
                "label": "Language rotation interval in seconds. Supported languages are 'en','de' and 'it'",
                "required": false,
                "options": {
                    "default": 10
                }
            },
            {
                "key": "font-url",
                "type": "text",
                "label": "URL to a valid font css file",
                "required": false,
                "options": {
                    "default": "https://fonts.testingmachine.eu/source-sans-pro/style.css"
                }
            },
            {
                "key": "font-name",
                "type": "text",
                "label": "Name of the font loaded from the font URL",
                "required": false,
                "options": {
                    "default": "Source Sans Pro"
                }
            }
        ]
    }
}