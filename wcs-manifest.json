    "image": "wcs-logo.png",
    "searchTags": [],
    "dist": {
        "basePath": "dist",
        "files": [
            "events-upcoming.min.js"
        ],
        "scripts": []
    },
    "configuration": {
        "tagName": "events-upcoming",
        "options": [
            {
                "key": "source",
                "type": "select",
                "label": "Filter by dataprovider",
                "required": false,        
                "options": {
                  "values": [
                    "null",           
                    "lts",
                    "drin",
                    "trevilab"
                  ],
                  "default":"null"
                }
              },
              {
                "key": "language",
                "type": "select",
                "label": "language to show (if no language is checked the events will rotate and displayed in all languages)",
                "required": false,        
                "options": {
                  "values": [
                    "",
                    "de",
                    "it",        
                    "en"
                  ],
                  "default":"en"
                }
            },
              {
                "key": "location",
                "type": "text",
                "label": "Location Filter (pass type + id check out https://tourism.opendatahub.com/v1/Location)",
                "required": false,
                "options": {
                  "default": ""
                }
              },
            {
                "key": "max-events",
                "type": "number",
                "label": "Max number of events to display",
                "required": false,
                "options": {
                    "default": 12
                }
            },
            {
                "key": "location-to-show",
                "type": "select",
                "label": "Select what locationinfo to show",
                "required": false,        
                "options": {
                  "values": [
                    "district",
                    "municipality",        
                    "tourismassociation",
                    "region",
                    "location"
                  ],
                  "default":"district"
                }
            },
            {
                "key": "event-sortmode",
                "type": "select",
                "label": "Select what sortmode for events, upcoming = multiple day events first, upcomingspecial = single day events first, upcomingspecialdesc = sort the nearest event to datetime now first",
                "required": false,        
                "options": {
                  "values": [
                    "upcoming",
                    "upcomingspecial",
                    "upcomingspecialdesc"
                  ],
                  "default":"upcomingspecial"
                }
            },
            {
              "key": "event-refresh-interval",
              "type": "number",
              "label": "Event refresh interval in seconds, default is set to every ten minutes",
              "required": false,
              "options": {
                  "default": 600
              }
            },
            {
                "key": "language-rotation-interval",
                "type": "number",
                "label": "Language rotation interval in seconds. Supported languages are 'en','de' and 'it', if a language is selected this will be ignored.",
                "required": false,
                "options": {
                    "default": 30
                }
            },
            {
              "key": "background-color",
              "type": "text",
              "label": "background color style",
              "required": false,
              "options": {
                  "default": "#3c763d"
              }
            },
            {
                "key": "font-url",
                "type": "text",
                "label": "URL to a valid font css file",
                "required": false,
                "options": {
                    "default": "https://fonts.testingmachine.eu/source-sans-pro/style.css"
                }
            },
            {
                "key": "font-name",
                "type": "text",
                "label": "Name of the font loaded from the font URL",
                "required": false,
                "options": {
                    "default": "Source Sans Pro"
                }
            }
        ]
    }
}